<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <style>
        body {
            margin: 0;
            font-family: "Poppins", sans-serif;
            background: #f7f7f7;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .card {
            background: white;
            padding: 40px 30px;
            max-width: 400px;
            width: 100%;
            text-align: center;
            border-radius: 12px;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        input {
            width: 80%;
            padding: 12px;
            margin: 12px 0;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        input:focus {
            outline: none;
            border-color: #111;
        }

        button {
            padding: 12px;
            width: 86%;
            border: none;
            background: #111;
            color: white;
            font-size: 15px;
            border-radius: 8px;
            cursor: pointer;
        }

        button:hover {
            opacity: 0.85;
        }
    </style>
</head>

<body>
    <div class="card">
        <h1>Admin Login</h1>

        <form id="adminLoginForm">
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
    </div>

    <script>
        const showToast = (text, color) => {
            Toastify({
                text,
                duration: 1200,
                close: true,
                gravity: "top",
                position: "center",
                backgroundColor: color
            }).showToast();
        };

        document.getElementById("adminLoginForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const email = email.value.trim();
            const password = password.value.trim();

            if (!email || !password) {
                return showToast("All fields are required", "#ff4d4d");
            }

            try {
                const res = await fetch("/admin/adminLogin", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email, password })
                });

                const data = await res.json();

                if (data.success) {
                    showToast("Login successful!", "#4CAF50");
                    setTimeout(() => (window.location.href = "/admin/dashboard"), 900);
                } else {
                    showToast(data.error, "#ff4d4d");
                }

            } catch {
                showToast("Server error. Try again.", "#ff4d4d");
            }
        });
    </script>
</body>

</html>