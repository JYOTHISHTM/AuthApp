<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <style>
        body {
            margin: 0;
            font-family: "Poppins", sans-serif;
            background: #f7f7f7;
        }

        .container {
            max-width: 1000px;
            margin: 40px auto;
            padding: 0 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        th {
            background: #111;
            color: white;
        }

        tr:hover {
            background: #f5f5f5;
        }

        button {
            padding: 8px 14px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: 0.2s;
        }

        .block-btn {
            background: #e74c3c;
            color: white;
        }

        .block-btn:hover {
            opacity: 0.85;
        }

        .unblock-btn {
            background: #3cbc63;
            color: white;
        }

        .unblock-btn:hover {
            opacity: 0.85;
        }

        .logout-btn {
            margin-top: 40px;
            background: #111;
            color: white;
            width: 20%;
            padding: 12px;
        }

        .logout-btn:hover {
            opacity: 0.85;
        }

        @media(max-width: 600px) {
            th, td {
                padding: 12px;
                font-size: 14px;
            }

            button {
                padding: 6px 10px;
                font-size: 13px;
            }
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Admin Dashboard</h1>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td>
                            <% if (!user.isBlocked) { %>
                                <form action="/admin/block/<%= user._id %>" method="POST">
                                    <button class="block-btn" type="submit">Block</button>
                                </form>
                            <% } else { %>
                                <form action="/admin/unblock/<%= user._id %>" method="POST">
                                    <button class="unblock-btn" type="submit">Unblock</button>
                                </form>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <form action="/admin/logout" method="post">
            <button class="logout-btn" type="submit">Logout</button>
        </form>
    </div>

</body>

</html>
